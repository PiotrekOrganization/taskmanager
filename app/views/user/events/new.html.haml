
%div{:class=>"container"}

	%ul{:class=>"nav nav-tabs", :id=>"myTab"}
		%li{:class=>"active"}
			%a{:href => "#home",:data=>{:toggle=>"tab"}} Dynamic event
			
		%li
			%a{:href => "#profile", :data=>{:toggle=>"tab"}}fixed event

	  
	%div{:class=>"tab-content"}
		%div{:class=>"tab-pane active", :id=>"home"}
			=form_for [:user,@event] do |f|
				=f.hidden_field :fixed, value: false
				=f.hidden_field :priority
				=f.label :name
				=f.text_field :name	, :class=>"input-large"				

				=f.label :datetime_start
				=f.text_field :datetime_start, :id=>"dynStartDatepicker",:class=>"input-large"		

				=f.label :datetime_end	
				=f.text_field :datetime_end, :id=>"dynEndDatepicker" ,:class=>"input-large"	
				%br

				%p Click to change the progress
				

				%a{:class=>"btn btn-primary",:id=>"updateit"}
					%i{:class=>"icon-plus  icon-white input-large	" }
				
				%a{ :class=>"btn btn-primary", :id=>"remove1"}
					%i{:class=>"icon-minus  icon-white input-large"}
				%br

				

				%div{:class=>"progress progress-striped input-large"}
					%a
						%div{:class=>"bar input-large",:style=>"width: 50%"}					
				

				=f.label :min_task_minutes
				=f.text_field :min_task_minutes , :class=>"input-large"	


				
				%br
				=f.submit 'Dodaj Wydarzenie', :class => 'btn'

		%div{:class=>"tab-pane ",:id=>"profile"} 
			=form_for [:user,@event] do |f|
				= f.hidden_field :fixed, value: false
				=f.hidden_field :priority
				=f.label :name
				=f.text_field :name	, :class=>"input-large"				

				=f.label :datetime_start
				=f.text_field :datetime_start, :id=>"fixStartDatepicker",:class=>"input-large"	

				=f.label :datetime_end	
				=f.text_field :datetime_end, :id=>"fixEndDatepicker" ,:class=>"input-large"	
				%br				

				=f.label :min_task_minutes
				=f.text_field :min_task_minutes , :class=>"input-large"

					

				
				%br
				=f.submit 'Dodaj Wydarzenie', :class => 'btn'
		%div{:class=>"tab-pane",:id=>"messages"}
		%div{:class=>"tab-pane" ,:id=>"settings"}
		